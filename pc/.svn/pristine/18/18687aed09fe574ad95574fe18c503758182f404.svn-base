                        <div class="cOperation">
                            <span class="del" @click.stop.prevent="deleteSchoolTopic(ele.schoolTopicId)">删除</span><span class="partake">{{ele.memberCount}}人参与</span><span class="time">{{ele.createTime}}</span>
